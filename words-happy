function cv_mo3MCDSMI2SOSBUrefresh_preplay() {

document.getElementById("cv_mo3MCDSMI2SOSBUchiDiv").innerHTML = document.getElementById("cv_mo3MCDSMI2SOSBUhiddenPre").innerHTML;
};
cv_mo3MCDSMI2SOSBUrefresh_preplay();

