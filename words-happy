function cv_moN2JWS026D607loadSwf_Core(swfLocation, swfWidth, swfHeight, flashVersion, bgColor, swfParams, flashParams, embedAttributes) {

  try {
      cv_moN2JWS026D607so = new SWFObject(swfLocation, "cv_moN2JWS026D607AMPlayerProd", swfWidth, swfHeight, flashVersion, bgColor);	   

      for (var v in swfParams) {
        cv_moN2JWS026D607so.addVariable(v, encodeURIComponent(swfParams[v]));
      }
      for (var v in flashParams) {
        cv_moN2JWS026D607so.addParam(v, flashParams[v]);
      }
      for (var v in embedAttributes) {
        cv_moN2JWS026D607so.setAttribute(v, embedAttributes[v]);
      }

      cv_moN2JWS026D607so.addVariable("swfEmbedTime", new Date().getTime());

      var agt = navigator.userAgent;
       
      var reFirefox = new RegExp("firefox/", "i");
      var regx = agt.split(reFirefox);
      var ffVersion = 8;
      if (regx[1]) {
          var pts = regx[1].split(/[.]/);
          ffVersion = parseFloat(pts[0] + "." + pts[1]);
      }
      var minorVersion = parseFloat(navigator.ap);
      if ((navigator.appVersion.indexOf("Mac")!=-1) || (ffVersion &lt; 1.5)) {
          cv_moN2JWS026D607so.setAttribute("height", swfHeight);
          cv_moN2JWS026D607so.setAttribute("width", swfWidth);
          cv_moN2JWS026D607so.addVariable("oldFirefox", "1");	     
      }

      if (cv_moN2JWS026D607so.write("cv_moN2JWS026D607flashcontent")) {
          fp_resizePlayerSpace('cv_moN2JWS026D607', 
                               320, 
                               283);
      }
      else {
          var nsPrefix = 'cv_moN2JWS026D607';

          fp_resizePlayerSpace(nsPrefix, 0, 0);
          fp_rewriteDiv(nsPrefix, "flashcontent", '&lt;br /&gt;To view this video download &lt;a target="_blank" href="http://www.macromedia.com/go/getflashplayer" target="_top"&gt;Flash Player&lt;/a&gt; (version 9.0.115 or higher)');
      }
  } catch(err) {
      fp_resizePlayerSpace('cv_moN2JWS026D607', 0, 0);
  }
  return false;
}



