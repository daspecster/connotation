function cv_mo3MCDSMI2SOSBUnewHeight(h)
{	
    fp_resizePlayerSpace('cv_mo3MCDSMI2SOSBU', 0, h);
}

function cv_mo3MCDSMI2SOSBUresetPlayer(w,h,bw,cc) {
  cv_mo3MCDSMI2SOSBUnewHeight(h);

  cv_mo3MCDSMI2SOSBUso.addVariable("resetBandwidth", bw);
  cv_mo3MCDSMI2SOSBUso.addVariable("cacheCode", cc);
  cv_mo3MCDSMI2SOSBUso.setAttribute("height", h);
  cv_mo3MCDSMI2SOSBUso.setAttribute("width", w);
  cv_mo3MCDSMI2SOSBUso.write("cv_mo3MCDSMI2SOSBUflashcontent");
}

