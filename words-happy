function cv_moN2JWS026D607resetPlayer(w,h,bw,cc) {
  cv_moN2JWS026D607newHeight(h);

  cv_moN2JWS026D607so.addVariable("resetBandwidth", bw);
  cv_moN2JWS026D607so.addVariable("cacheCode", cc);
  cv_moN2JWS026D607so.setAttribute("height", h);
  cv_moN2JWS026D607so.setAttribute("width", w);
  cv_moN2JWS026D607so.write("cv_moN2JWS026D607flashcontent");
}

