    if (document.getElementById('cv_moN2JWS026D607duration')) {
      document.getElementById('cv_moN2JWS026D607duration').style.display='none';
    }
    cv_moN2JWS026D607loadSwf_Core(swfLocation, swfWidth, swfHeight, flashVersion, bgColor, swfParams, flashParams, embedAttributes);

  return false;
}

